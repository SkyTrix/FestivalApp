        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Window1" Height="300" Width="300">
    <Window.Resources>
        <Style x:Key="test" TargetType="Menu">
            <Setter Property="Background" Value="Blue"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Menu>
            <Menu.Style>
                <Style TargetType="Menu">
                    <Setter Property="Background" Value="Blue"/>
                </Style>                
            </Menu.Style>
            <MenuItem Header="test" Command="" Background="Yellow"/>
            <MenuItem Header="test" Command=""/>
            <MenuItem Header="test" Command=""/>
            <Menu.ItemsPanel>
                <ItemsPanelTemplate>
                    <VirtualizingStackPanel Orientation="Vertical"/>
                </ItemsPanelTemplate>
            </Menu.ItemsPanel>
        </Menu>
    </Grid>
</Window>
